[Unit]
Description=Polymarket Python Trade Monitor Service
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/opt/polymarket
Environment="PATH=/opt/polymarket/venv/bin:/usr/local/bin:/usr/bin:/bin"
EnvironmentFile=/opt/polymarket/.env
ExecStart=/opt/polymarket/venv/bin/python -m src.realtime.service
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# Resource limits
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
