# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# Polymarket Configuration
POLYMARKET_PRIVATE_KEY=your-wallet-private-key
POLYMARKET_API_KEY=your-api-key
POLYMARKET_API_SECRET=your-api-secret
POLYMARKET_API_PASSPHRASE=your-api-passphrase

# Pipeline Configuration
PARALLEL_WORKERS=10
API_RATE_LIMIT=60

# ==============================================================================
# COPY TRADING CONFIGURATION
# ==============================================================================

# Enable/Disable copy trading (default: false)
COPY_TRADING_ENABLED=false

# Paper trading mode - ALWAYS start with this enabled! (default: true)
PAPER_TRADING=true

# Minimum copytrade score to copy from (0-100, default: 60)
MIN_COPYTRADE_SCORE=60

# Fraction of trader's position to copy (0.0-1.0, default: 0.1 = 10%)
COPY_FRACTION=0.1

# Minimum USD value to copy (default: 5)
MIN_COPY_SIZE_USD=5

# Maximum USD per copy trade (default: 100)
MAX_COPY_SIZE_USD=100

# Only copy trades >= this USD value (default: 50)
MIN_TRADE_SIZE_USD=50

# Only copy from watchlist traders (default: false)
COPY_WATCHLIST_ONLY=false

# ==============================================================================
# RISK MANAGEMENT
# ==============================================================================

# Maximum position per market in USD (default: 500)
MAX_POSITION_SIZE_USD=500

# Maximum total portfolio exposure in USD (default: 5000)
MAX_TOTAL_EXPOSURE_USD=5000

# Maximum single order in USD (default: 100)
MAX_SINGLE_ORDER_USD=100

# Maximum daily loss before kill switch activates (default: 500)
MAX_DAILY_LOSS_USD=500

# Maximum orders per day (default: 100)
MAX_DAILY_ORDERS=100

# ==============================================================================
# LOGGING
# ==============================================================================
LOG_LEVEL=INFO
